<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">


<de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_chat_to_row"
        app:civ_border_width="3dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.435"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_chat_to_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_edittext_register_login"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:text="This is message from the other pat of the messenger."

        android:textAlignment="gravity"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_chat_to_row"
        app:layout_constraintEnd_toStartOf="@+id/imageView_chat_to_row"
        app:layout_constraintTop_toTopOf="@+id/imageView_chat_to_row" />

</androidx.constraintlayout.widget.ConstraintLayout>